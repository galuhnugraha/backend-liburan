<div class="tab-pane fade show active" id="show-news" role="tabpanel" aria-labelledby="home-tab">
    <!-- DataTales Example -->
 <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>No</th>
              <th>Title</th>
              <th>Author</th>
              <th>Country</th>
              <th>City</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i = 0; i < news.length; i++) { %>
              <tr>
                <td><%= i + 1 %></td>
                <td><%= news[i].title %></td>
                <td><%= news[i].author %></td>
                <td><%= news[i].country %></td>
                <td><%= news[i].city %></td>
                <td>
                  <form action="/admin/news/<%= news[i].id %>?_method=DELETE" method="POST">
                    <a href="/admin/news/show-image/<%= news[i].id %>" class="btn btn-info btn-circle btn-sm"><i class="fas fa-image"></i></a>
                    <a href="/admin/news/<%= news[i].id %>" 
                        class="btn btn-warning btn-circle btn-sm"><i class="fas fa-edit"></i></a>
                    <button type="submit" class="btn btn-danger btn-circle btn-sm"><i
                            class="fas fa-trash"></i></button>
                </form>

              </td>
  
              </tr>
            <%} %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>